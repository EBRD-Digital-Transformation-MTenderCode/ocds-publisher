{
  "name": "ocds-publisher",
  "description": "OCDS Publisher App",
  "version": "1.0.0",
  "main": "build/app/index.js",
  "author": "uStudio Front-end Department",
  "scripts": {
    "dev": "cross-env NODE_PATH=./src NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "yarn clear && tsc --diagnostics && renamer --find src --replace app ./build/*",
    "start": "yarn build && cross-env NODE_PATH=./build/app NODE_ENV=production node build/app/index.js",
    "clear": "rimraf build",
    "autofix": "eslint --fix -c .eslintrc.json --ext .ts src/",
    "autoformat": "prettier --write \"src/**/*.ts\"",
    "test": "jest --watch --config jest.config.js"
  },
  "dependencies": {
    "@types/node": "^14.0.9",
    "@types/pino": "^6.0.1",
    "axios": "^0.19.2",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "fastify": "^2.14.1",
    "fastify-cors": "^3.0.3",
    "fastify-swagger": "^2.6.0",
    "pino": "^6.3.1",
    "pino-pretty": "^4.0.0",
    "renamer": "^2.0.0",
    "rimraf": "^3.0.2",
    "ts4ocds": "^1.0.0-rc.1",
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn autofix",
      "yarn autoformat"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engineStrict": true,
  "engines": {
    "node": ">=12.16.1 <13.0.0"
  }
}
